# ========================================
# CONFIGURATION DÉVELOPPEMENT LOCAL BLIZZ
# ========================================
# Ce fichier est pour le développement LOCAL uniquement
# Pour la production, voir .env.production.example
# ========================================

# SÉCURITÉ DJANGO
SECRET_KEY=django-insecure-dev-key-change-me-in-production
DEBUG=True

# BASE DE DONNÉES (SQLite en local)
# DATABASE_URL n'est pas nécessaire en local, Django utilisera SQLite

# CINETPAY (utiliser les clés de TEST)
CINETPAY_API_KEY=your-test-api-key
CINETPAY_SITE_ID=your-test-site-id
CINETPAY_SECRET_KEY=your-test-secret-key
CINETPAY_GAMING_TEST_MODE=True
CINETPAY_DROPSHIPPING_TEST_MODE=True

# EMAIL (pour tests locaux)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# CLOUDINARY (optionnel en local)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# CONFIGURATION LOCALE
ENVIRONMENT=development
BASE_URL=http://localhost:8000
