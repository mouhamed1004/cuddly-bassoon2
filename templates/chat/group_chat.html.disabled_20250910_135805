            {% endif %}
        </div>
    </div>

    <!-- Messages -->
    <div class="messages-area" id="messagesArea">
        {% for message in messages %}
            {% if first_unread_message and message.id == first_unread_message.id %}
                <div class="unread-separator">
                    <div class="unread-line"></div>
                    <span class="unread-text">Messages non lus</span>
                    <div class="unread-line"></div>
                </div>
            {% endif %}
            <div class="message-wrapper {% if message.sender == request.user %}own{% else %}other{% endif %}" data-message-id="{{ message.id }}">
                {% if message.reply_to %}
                    <div class="reply-indicator">
                        <i class="fas fa-reply"></i>
                        <span>{{ message.reply_to.sender.username }}: {{ message.reply_to.content|truncatechars:30 }}</span>
                    </div>
                {% endif %}
                <div class="message-content-wrapper">
                    <div class="message-bubble">
                        {% if message.image %}
                            <div class="message-image">
                                <img src="{{ message.image.url }}" alt="Image" onclick="openImageModal('{{ message.image.url }}')">
                            </div>
                        {% endif %}
                        {% if message.file %}
                            <div class="message-file">
                                <i class="fas fa-file"></i>
                                <a href="{{ message.file.url }}" target="_blank">{{ message.file.name|default:"Fichier" }}</a>
                            </div>
                        {% endif %}
                        {% if message.content %}
                            <div class="message-content">{{ message.content }}</div>
                        {% endif %}
                        <div class="message-time" data-timestamp="{{ message.created_at|date:'c' }}"></div>
                        <div class="message-actions">
                            <button class="action-btn reply-btn" onclick="replyToMessage('{{ message.id }}', '{{ message.sender.username }}', '{{ message.content|escapejs }}')">
                                <i class="fas fa-reply"></i>
                            </button>
                        </div>
                    </div>
                    <div class="message-sender">
                        <a href="{% url 'profile' message.sender.username %}" class="sender-link">
                            <span class="sender-name">{{ message.sender.username }}</span>
                            {% if message.sender.profile.profile_picture %}
                                <img src="{{ message.sender.profile.profile_picture.url }}" alt="{{ message.sender.username }}" class="sender-avatar">
                            {% else %}
                                <div class="sender-avatar default">{{ message.sender.username|first|upper }}</div>
                            {% endif %}
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

