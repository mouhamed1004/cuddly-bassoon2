const messagesArea = document.getElementById('messagesArea');
const messageInput = document.getElementById('messageInput');
const chatForm = document.getElementById('chatForm');
const sendBtn = document.getElementById('sendBtn');
const fileInput = document.getElementById('fileInput');
const fileBtn = document.getElementById('fileBtn');
const filePreview = document.getElementById('filePreview');
const replyPreview = document.getElementById('replyPreview');
const cancelReply = document.getElementById('cancelReply');

// Variables pour les fonctionnalit√©s
let selectedFiles = [];
let replyToMessageId = null;
    
// Gestion des fichiers
fileBtn.addEventListener('click', () => fileInput.click());

fileInput.addEventListener('change', function(e) {
    const files = Array.from(e.target.files);
    selectedFiles = selectedFiles.concat(files);
    updateFilePreview();
    updateSendButton();
});

// Gestion des r√©ponses
cancelReply.addEventListener('click', function() {
    replyToMessageId = null;
    replyPreview.style.display = 'none';
});

    // Auto-resize du textarea
    messageInput.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = Math.min(this.scrollHeight, 120) + 'px';
        updateSendButton();
    });

// Initialiser le s√©lecteur d'emojis pour le chat de groupe
document.addEventListener('DOMContentLoaded', function() {
    const emojiBtn = document.getElementById('emojiBtn');
    const messageInput = document.getElementById('messageInput');
    
    if (emojiBtn && messageInput) {
        emojiBtn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            // V√©rifier si EmojiPicker est disponible
            if (typeof EmojiPicker === 'undefined') {
                console.error('EmojiPicker non disponible');
                return;
            }
            
            const picker = window.emojiPickerInstance || EmojiPicker.init();
            if (picker.isVisible && picker.currentInput === messageInput) {
                picker.hide();
            } else {
                picker.show(messageInput, emojiBtn);
            }
        });
    }
});

// Fonction pour mettre √† jour le bouton d'envoi
function updateSendButton() {
    const hasContent = messageInput.value.trim().length > 0;
    const hasFiles = selectedFiles.length > 0;
    sendBtn.disabled = !hasContent && !hasFiles;
}

// Fonction pour mettre √† jour l'aper√ßu des fichiers
function updateFilePreview() {
    filePreview.innerHTML = '';
    selectedFiles.forEach((file, index) => {
        const fileItem = document.createElement('div');
        fileItem.className = 'file-item';
        
        const icon = file.type.startsWith('image/') ? 'fas fa-image' : 'fas fa-file';
        fileItem.innerHTML = `
            <i class="${icon}"></i>
            <span>${file.name}</span>
            <button type="button" class="remove-file" onclick="removeFile(${index})">&times;</button>
        `;
        
        filePreview.appendChild(fileItem);
    });
}

// Fonction pour supprimer un fichier
function removeFile(index) {
    selectedFiles.splice(index, 1);
    updateFilePreview();
    updateSendButton();
}

// Fonction pour r√©pondre √† un message
function replyToMessage(messageId, senderName, content) {
    replyToMessageId = messageId;
    document.getElementById('replyToUser').textContent = senderName;
    document.getElementById('replyToContent').textContent = content.substring(0, 100) + (content.length > 100 ? '...' : '');
    replyPreview.style.display = 'flex';
    messageInput.focus();
}

// Envoi avec Enter
messageInput.addEventListener('keydown', function(e) {
    if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendMessage();
    }
});

// Soumission du formulaire
chatForm.addEventListener('submit', function(e) {
    e.preventDefault();
    sendMessage();
});
    
// Fonction d'envoi de message avec support des m√©dias et r√©ponses
function sendMessage() {
    const content = messageInput.value.trim();
    if (!content && selectedFiles.length === 0) return;
    
    // D√©sactiver temporairement
    sendBtn.disabled = true;
    messageInput.disabled = true;
    
    // Pr√©parer les donn√©es
    const formData = new FormData();
    if (content) formData.append('content', content);
    
    // Ajouter les fichiers
    selectedFiles.forEach((file, index) => {
        if (file.type.startsWith('image/')) {
            formData.append('image', file);
        } else {
            formData.append('file', file);
        }
    });
    
    // Ajouter la r√©ponse si applicable
    if (replyToMessageId) {
        formData.append('reply_to', replyToMessageId);
    }
    
    formData.append('csrfmiddlewaretoken', document.querySelector('[name=csrfmiddlewaretoken]').value);
    
    // Envoyer
    fetch(`/chat/group/${groupId}/send/`, {
        method: 'POST',
        body: formData,
        headers: { 'X-Requested-With': 'XMLHttpRequest' }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Ajouter le message imm√©diatement c√¥t√© exp√©diteur avec le bon statut "own"
            addMessageFromData(data.message, true);
            
            // Vider les champs
            messageInput.value = '';
            messageInput.style.height = 'auto';
            selectedFiles = [];
            updateFilePreview();
            replyToMessageId = null;
            replyPreview.style.display = 'none';
            updateSendButton();
        } else {
            alert('Erreur: ' + (data.error || 'Envoi √©chou√©'));
        }
    })
    .catch(error => {
        console.error('Erreur:', error);
        alert('Erreur de connexion');
    })
    .finally(() => {
        // R√©activer
        sendBtn.disabled = false;
        messageInput.disabled = false;
    });
}

// Fonction pour ajouter un message
function addMessage(content, isOwn = false, timestamp = null, sender = null) {
    // Cr√©er le message wrapper
    const messageDiv = document.createElement('div');
    messageDiv.className = `message-wrapper ${isOwn ? 'own' : 'other'}`;
    
    // Cr√©er la bulle de message
    const bubbleDiv = document.createElement('div');
    bubbleDiv.className = 'message-bubble';
    
    const contentDiv = document.createElement('div');
    contentDiv.className = 'message-content';
    contentDiv.textContent = content;
    
    const timeDiv = document.createElement('div');
    timeDiv.className = 'message-time';
    timeDiv.textContent = '√Ä l\'instant';
    
    bubbleDiv.appendChild(contentDiv);
    bubbleDiv.appendChild(timeDiv);
    
    // Cr√©er le pseudo √† l'ext√©rieur avec avatar
    const senderDiv = document.createElement('div');
    senderDiv.className = 'message-sender';
    
    // Pour les messages de l'utilisateur actuel, pas de lien
    if (sender && sender !== 'Vous') {
        const senderLink = document.createElement('a');
        senderLink.href = `/profile/${sender}/`;
        senderLink.className = 'sender-link';
        
        const nameSpan = document.createElement('span');
        nameSpan.className = 'sender-name';
        nameSpan.textContent = sender;
        
        const avatarDiv = document.createElement('div');
        avatarDiv.className = 'sender-avatar default';
        avatarDiv.textContent = sender[0].toUpperCase();
        
        senderLink.appendChild(nameSpan);
        senderLink.appendChild(avatarDiv);
        senderDiv.appendChild(senderLink);
    } else {
        const nameSpan = document.createElement('span');
        nameSpan.className = 'sender-name';
        nameSpan.textContent = sender || 'Vous';
        
        const avatarDiv = document.createElement('div');
        avatarDiv.className = 'sender-avatar default';
        avatarDiv.textContent = (sender || 'V')[0].toUpperCase();
        
        senderDiv.appendChild(nameSpan);
        senderDiv.appendChild(avatarDiv);
    }
    
    messageDiv.appendChild(bubbleDiv);
    messageDiv.appendChild(senderDiv);
    
    messagesArea.appendChild(messageDiv);
    messagesArea.scrollTop = messagesArea.scrollHeight;
}
    
// √âchapper le HTML
function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}
    
// Initialisation
sendBtn.disabled = true;
messageInput.focus();

// Fonction de rechargement des messages avec support complet
function fetchGroupMessages() {
    fetch(`/chat/group/${groupId}/messages/`, { headers: { 'X-Requested-With': 'XMLHttpRequest' }})
        .then(r => r.json())
        .then(data => {
            if (data.success) {
                const messages = data.messages || [];
                const scrollAtBottom = messagesArea.scrollTop + messagesArea.clientHeight >= messagesArea.scrollHeight - 10;
                messagesArea.innerHTML = '';
                messages.forEach(m => {
                    addMessageWithReply(m);
                });
                // Maintenir la position de scroll si l'utilisateur √©tait en bas
                if (scrollAtBottom) {
                    messagesArea.scrollTop = messagesArea.scrollHeight;
                }
                // Mettre √† jour les timestamps apr√®s ajout des messages
                setTimeout(() => {
                    updateTimestamps();
                }, 50);
            }
        })
        .catch(error => {
            console.error('Erreur lors du chargement des messages:', error);
        });
}
// setInterval(fetchGroupMessages, 5000);
