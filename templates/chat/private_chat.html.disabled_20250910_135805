{% block extra_js %}
<script src="{% static 'js/floating-chat.js' %}"></script>
<script src="{% static 'js/emoji-picker.js' %}"></script>
<script>
// Variables globales
const conversationId = '{{ conversation.id }}';
const messagesArea = document.getElementById('messagesArea');
const messageInput = document.getElementById('messageInput');
const sendBtn = document.getElementById('sendBtn');
const fileInput = document.getElementById('fileInput');
const fileBtn = document.getElementById('fileBtn');
const filePreview = document.getElementById('filePreview');
const replyPreview = document.getElementById('replyPreview');

// Variables pour la r√©ponse
let replyToMessageId = null;
let selectedFiles = [];
    
// Auto-resize textarea
messageInput.addEventListener('input', function() {
    this.style.height = 'auto';
    this.style.height = Math.min(this.scrollHeight, 120) + 'px';
    updateSendButton();
});

// Initialiser le s√©lecteur d'emojis
document.addEventListener('DOMContentLoaded', function() {
    const emojiBtn = document.getElementById('emojiBtn');
    const messageInput = document.getElementById('messageInput');
    
    if (emojiBtn && messageInput) {
        emojiBtn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            const picker = window.emojiPickerInstance || EmojiPicker.init();
            if (picker.isVisible && picker.currentInput === messageInput) {
                picker.hide();
            } else {
                picker.show(messageInput, emojiBtn);
            }
        });
    }
});

// Fonction pour mettre √† jour l'√©tat du bouton d'envoi
function updateSendButton() {
    const hasText = messageInput.value.trim().length > 0;
    const hasFiles = selectedFiles.length > 0;
    sendBtn.disabled = !hasText && !hasFiles;
}

// Envoi avec Enter
messageInput.addEventListener('keydown', function(e) {
    if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendMessage();
    }
});

// Soumission avec le bouton
document.getElementById('sendBtn').addEventListener('click', function(e) {
    e.preventDefault();
    sendMessage();
});
    
// Gestion des fichiers
fileBtn.addEventListener('click', () => fileInput.click());

fileInput.addEventListener('change', function(e) {
    const files = Array.from(e.target.files);
    selectedFiles = [...selectedFiles, ...files];
    updateFilePreview();
    updateSendButton();
});

function updateFilePreview() {
    if (selectedFiles.length === 0) {
        filePreview.style.display = 'none';
        return;
    }
    
    filePreview.style.display = 'block';
    filePreview.innerHTML = '';
    
    selectedFiles.forEach((file, index) => {
        const fileItem = document.createElement('div');
        fileItem.className = 'file-item';
        
        if (file.type.startsWith('image/')) {
            const img = document.createElement('img');
            img.src = URL.createObjectURL(file);
            fileItem.appendChild(img);
        }
        
        const fileInfo = document.createElement('div');
        fileInfo.className = 'file-info';
        fileInfo.innerHTML = `
            <p class="file-name">${file.name}</p>
            <p class="file-size">${(file.size / 1024).toFixed(1)} KB</p>
        `;
        
        const removeBtn = document.createElement('button');
        removeBtn.className = 'remove-file';
        removeBtn.innerHTML = '√ó';
        removeBtn.onclick = () => removeFile(index);
        
        fileItem.appendChild(fileInfo);
        fileItem.appendChild(removeBtn);
        filePreview.appendChild(fileItem);
    });
}

function removeFile(index) {
    selectedFiles.splice(index, 1);
    updateFilePreview();
    updateSendButton();
}

// Fonction de r√©ponse √† un message
function replyToMessage(messageId, username, content) {
    replyToMessageId = messageId;
    document.getElementById('replyToUser').textContent = username;
    document.getElementById('replyToContent').textContent = content.length > 50 ? content.substring(0, 50) + '...' : content;
    replyPreview.style.display = 'block';
    messageInput.focus();
}

// Annuler la r√©ponse
document.getElementById('cancelReply').addEventListener('click', function() {
    replyToMessageId = null;
    replyPreview.style.display = 'none';
});

// Fonction d'envoi de message avec support des fichiers et r√©ponses
function sendMessage() {
    const content = messageInput.value.trim();
    
    // V√©rifier qu'il y a du contenu ou des fichiers
    if (!content && selectedFiles.length === 0) return;
    
    // D√©sactiver temporairement
    sendBtn.disabled = true;
    messageInput.disabled = true;
    
    // Pr√©parer les donn√©es
    const formData = new FormData();
    if (content) formData.append('content', content);
    if (replyToMessageId) formData.append('reply_to', replyToMessageId);
    
    // Ajouter les fichiers (un seul de chaque type pour simplicit√©)
    if (selectedFiles.length > 0) {
        const file = selectedFiles[0];
        if (file.type.startsWith('image/')) {
            formData.append('image', file);
        } else {
            formData.append('file', file);
        }
    }
    
    formData.append('csrfmiddlewaretoken', document.querySelector('[name=csrfmiddlewaretoken]').value);
    
    // Envoyer
    fetch(`/chat/private/${conversationId}/send/`, {
        method: 'POST',
        body: formData,
        headers: { 'X-Requested-With': 'XMLHttpRequest' }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Ajouter le message imm√©diatement c√¥t√© exp√©diteur
            addMessage(data.message);
            
            // Vider les champs
            messageInput.value = '';
            messageInput.style.height = 'auto';
            selectedFiles = [];
            updateFilePreview();
            replyToMessageId = null;
            replyPreview.style.display = 'none';
            updateSendButton();
        } else {
            alert('Erreur: ' + (data.error || 'Envoi √©chou√©'));
        }
    })
    .catch(error => {
        console.error('Erreur:', error);
        alert('Erreur de connexion');
    })
    .finally(() => {
        // R√©activer
        sendBtn.disabled = false;
        messageInput.disabled = false;
        messageInput.focus();
    });
}
    
// Fonction pour ajouter un message √† l'interface
function addMessage(messageData) {
    const messageWrapper = document.createElement('div');
    messageWrapper.className = `message-wrapper ${messageData.sender_id == '{{ request.user.id }}' ? 'own' : 'other'}`;
    messageWrapper.setAttribute('data-message-id', messageData.id);
    
    let messageHTML = '';
    
    // Indicateur de r√©ponse
    if (messageData.reply_to) {
        messageHTML += `
            <div class="reply-indicator">
                <i class="fas fa-reply"></i>
                <span>${messageData.reply_to.sender}: ${messageData.reply_to.content.substring(0, 30)}${messageData.reply_to.content.length > 30 ? '...' : ''}</span>
            </div>
        `;
    }
    
    messageHTML += '<div class="message-bubble">';
    
    // Image
    if (messageData.image) {
        messageHTML += `
            <div class="message-image">
                <img src="${messageData.image}" alt="Image" onclick="openImageModal('${messageData.image}')">
            </div>
        `;
    }
    
    // Fichier
    if (messageData.file) {
        messageHTML += `
            <div class="message-file">
                <i class="fas fa-file"></i>
                <a href="${messageData.file}" target="_blank">${messageData.file_name || 'Fichier'}</a>
            </div>
        `;
    }
    
    // Contenu texte
    if (messageData.content) {
        messageHTML += `<div class="message-content">${messageData.content}</div>`;
    }
    
    messageHTML += `<div class="message-time" data-timestamp="${messageData.created_at}" style="font-size: 11px; color: rgba(255,255,255,0.6); margin-top: 4px;">${formatTimestamp(messageData.created_at)}</div>`;
    messageHTML += '</div>';
    
    // Actions
    messageHTML += `
        <div class="message-actions">
            <button class="action-btn reply-btn" onclick="replyToMessage('${messageData.id}', '${messageData.sender}', '${messageData.content || ''}')">
                <i class="fas fa-reply"></i>
            </button>
            ${messageData.sender !== '{{ user.username }}' ? `
            <button class="action-btn report-btn" onclick="reportMessage('${messageData.id}', '${messageData.sender_id}', '${messageData.sender}')">
                <i class="fas fa-flag"></i>
            </button>
            ` : ''}
        </div>
    `;
    
    messageWrapper.innerHTML = messageHTML;
    messagesArea.appendChild(messageWrapper);
    messagesArea.scrollTop = messagesArea.scrollHeight;
    
    // Mettre √† jour le timestamp
    updateTimestamps();
}

// Modal pour les images
function openImageModal(imageSrc) {
    const modal = document.createElement('div');
    modal.className = 'image-modal';
    modal.innerHTML = `<img src="${imageSrc}" alt="Image">`;
    modal.onclick = () => document.body.removeChild(modal);
    document.body.appendChild(modal);
    modal.style.display = 'block';
}

// √âchapper le HTML
function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}
    
// Fonction pour formater les timestamps avec heure pr√©cise
function formatTimestamp(timestamp) {
    const now = new Date();
    const messageTime = new Date(timestamp);
    const diffMs = now - messageTime;
    const diffMins = Math.floor(diffMs / 60000);
    const diffHours = Math.floor(diffMs / 3600000);
    const diffDays = Math.floor(diffMs / 86400000);
    
    // Toujours afficher l'heure
    const timeString = messageTime.toLocaleTimeString('fr-FR', {
        hour: '2-digit',
        minute: '2-digit'
    });
    
    if (diffMins < 1) return `√Ä l'instant (${timeString})`;
    if (diffMins < 60) return `Il y a ${diffMins}min (${timeString})`;
    if (diffHours < 24) return `Il y a ${diffHours}h (${timeString})`;
    if (diffDays < 7) return `Il y a ${diffDays}j (${timeString})`;
    
    return messageTime.toLocaleDateString('fr-FR', {
        day: '2-digit',
        month: '2-digit',
        year: '2-digit'
    }) + ` ${timeString}`;
}

// Fonction pour mettre √† jour tous les timestamps
function updateTimestamps() {
    const timeElements = document.querySelectorAll('.message-time[data-timestamp]');
    timeElements.forEach(timeElement => {
        const timestamp = timeElement.getAttribute('data-timestamp');
        if (timestamp) {
            const formattedTime = formatTimestamp(timestamp);
            timeElement.textContent = formattedTime;
        }
    });
}

// Fonction pour signaler un message
function reportMessage(messageId, senderId, senderUsername) {
    if (confirm(`√ätes-vous s√ªr de vouloir signaler ce message de ${senderUsername} ?`)) {
        const formData = new FormData();
        formData.append('report_type', 'chat_message');
        formData.append('content_id', messageId);
        formData.append('reported_user_id', senderId);
        formData.append('reason', 'inappropriate_content');
        formData.append('description', 'Message signal√© depuis le chat priv√©');
        
        fetch('{% url "submit_report" %}', {
            method: 'POST',
            body: formData,
            headers: {
                'X-CSRFToken': document.querySelector('[name=csrfmiddlewaretoken]').value
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Message signal√© avec succ√®s. Notre √©quipe va examiner le contenu.');
            } else {
                alert('Erreur: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Erreur:', error);
            alert('Une erreur est survenue lors du signalement.');
        });
    }
}

// Initialiser les timestamps au chargement
document.addEventListener('DOMContentLoaded', function() {
    updateTimestamps();
    setInterval(updateTimestamps, 60000); // Mettre √† jour chaque minute
});

// WebSocket pour chat temps r√©el
let chatSocket = null;

function initWebSocket() {
    const conversationId = '{{ conversation.id }}';
    const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
    const wsUrl = `${protocol}//${window.location.host}/ws/chat/private/${conversationId}/`;
    
    chatSocket = new WebSocket(wsUrl);
    
    chatSocket.onmessage = function(e) {
        const data = JSON.parse(e.data);
        if (data.type === 'new_message') {
            // Ajouter le message re√ßu uniquement s'il n'est pas de nous
            if (data.message.sender_id != '{{ request.user.id }}') {
                addMessage(data.message);
            }
        }
    };
    
    chatSocket.onclose = function(e) {
        console.error('Chat socket ferm√© de mani√®re inattendue');
        // Tentative de reconnexion apr√®s 3 secondes
        setTimeout(function() {
            initWebSocket();
        }, 3000);
    };
    
    chatSocket.onerror = function(e) {
        console.error('Erreur WebSocket:', e);
    };
}

// Initialisation
updateSendButton();
messageInput.focus();
initWebSocket();

// Mettre √† jour les timestamps imm√©diatement
updateTimestamps();

// Fonction de r√©cup√©ration des messages (utilis√©e uniquement pour le chargement initial)
let lastMessageCount = 0;
function fetchMessages() {
    fetch(`/chat/private/${conversationId}/messages/`, { headers: { 'X-Requested-With': 'XMLHttpRequest' }})
        .then(r => r.json())
        .then(data => {
            if (data.success && data.messages.length !== lastMessageCount) {
                lastMessageCount = data.messages.length;
                const messagesArea = document.getElementById('messagesArea');
                messagesArea.innerHTML = '';
                data.messages.forEach(message => addMessage(message));
                updateTimestamps();
            }
        })
        .catch(error => {
            console.error('Erreur lors du chargement des messages:', error);
        });
}

// Fonction pour ajouter un message avec support des m√©dias
function addSimpleMessage(content, isOwn, timestamp, messageData = null) {
    const messageWrapper = document.createElement('div');
    messageWrapper.className = `message-wrapper ${isOwn ? 'own' : 'other'}`;
    
    let messageHTML = '<div class="message-bubble">';
    
    // Si on a des donn√©es compl√®tes du message
    if (messageData) {
        // Image
        if (messageData.image) {
            messageHTML += `
                <div class="message-image">
                    <img src="${messageData.image}" alt="Image" onclick="openImageModal('${messageData.image}')" style="max-width: 200px; max-height: 200px; border-radius: 8px; cursor: pointer;">
                </div>
            `;
        }
        
        // Fichier
        if (messageData.file) {
            messageHTML += `
                <div class="message-file" style="background: rgba(255,255,255,0.1); border: 1px solid var(--primary-color); border-radius: 8px; padding: 8px 12px; margin-bottom: 8px; display: flex; align-items: center; gap: 8px;">
                    <i class="fas fa-file" style="color: var(--primary-color);"></i>
                    <a href="${messageData.file}" target="_blank" style="color: var(--text-color); text-decoration: none;">${messageData.file_name || 'Fichier'}</a>
                </div>
            `;
        }
    }
    
    // Contenu texte
    if (content) {
        messageHTML += `<div class="message-content">${content}</div>`;
    }
    
    messageHTML += `<div class="message-time" data-timestamp="${timestamp}"></div>`;
    messageHTML += '</div>';
    
    messageWrapper.innerHTML = messageHTML;
    messagesArea.appendChild(messageWrapper);
    messagesArea.scrollTop = messagesArea.scrollHeight;
}

// Fonction compl√®te pour ajouter un message avec support des r√©ponses
function addMessageWithReply(messageData) {
    const messageWrapper = document.createElement('div');
    messageWrapper.className = `message-wrapper ${messageData.is_own ? 'own' : 'other'}`;
    messageWrapper.setAttribute('data-message-id', messageData.id);
    
    let messageHTML = '';
    
    // Indicateur de r√©ponse
    if (messageData.reply_to) {
        messageHTML += `
            <div class="reply-indicator" style="background: rgba(108, 92, 231, 0.2); border-left: 3px solid var(--primary-color); padding: 8px 12px; margin-bottom: 5px; border-radius: 8px; font-size: 12px; color: rgba(255, 255, 255, 0.8);">
                <i class="fas fa-reply" style="margin-right: 5px; color: var(--primary-color);"></i>
                <span>${messageData.reply_to.sender}: ${messageData.reply_to.content}</span>
            </div>
        `;
    }
    
    messageHTML += '<div class="message-bubble">';
    
    // Image
    if (messageData.image) {
        messageHTML += `
            <div class="message-image">
                <img src="${messageData.image}" alt="Image" onclick="openImageModal('${messageData.image}')" style="max-width: 200px; max-height: 200px; border-radius: 8px; cursor: pointer; margin-bottom: 8px; transition: transform 0.3s ease;">
            </div>
        `;
    }
    
    // Fichier
    if (messageData.file) {
        messageHTML += `
            <div class="message-file" style="background: rgba(255,255,255,0.1); border: 1px solid var(--primary-color); border-radius: 8px; padding: 8px 12px; margin-bottom: 8px; display: flex; align-items: center; gap: 8px;">
                <i class="fas fa-file" style="color: var(--primary-color);"></i>
                <a href="${messageData.file}" target="_blank" style="color: var(--text-color); text-decoration: none;">${messageData.file_name || 'Fichier'}</a>
            </div>
        `;
    }
    
    // Contenu texte
    if (messageData.content) {
        messageHTML += `<div class="message-content">${messageData.content}</div>`;
    }
    
    messageHTML += `<div class="message-time" data-timestamp="${messageData.created_at}" style="font-size: 11px; color: rgba(255,255,255,0.6); margin-top: 4px;">${formatTimestamp(messageData.created_at)}</div>`;
    messageHTML += '</div>';
    
    // Actions (bouton r√©ponse)
    messageHTML += `
        <div class="message-actions" style="opacity: 0; transition: opacity 0.3s ease;">
            <button class="action-btn reply-btn" onclick="replyToMessage('${messageData.id}', '${messageData.sender}', '${(messageData.content || '').replace(/'/g, '\\\'')}')" style="background: rgba(108, 92, 231, 0.2); border: none; border-radius: 50%; width: 30px; height: 30px; color: var(--primary-color); cursor: pointer; display: flex; align-items: center; justify-content: center; margin-right: 5px;">
                <i class="fas fa-reply"></i>
            </button>
            ${messageData.sender !== '{{ user.username }}' ? `
            <button class="action-btn report-btn" onclick="reportMessage('${messageData.id}', '${messageData.sender_id}', '${messageData.sender}')" style="background: rgba(220, 53, 69, 0.2); border: none; border-radius: 50%; width: 30px; height: 30px; color: #dc3545; cursor: pointer; display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-flag"></i>
            </button>
            ` : ''}
        </div>
    `;
    
    messageWrapper.innerHTML = messageHTML;
    
    // Afficher les actions au survol
    messageWrapper.addEventListener('mouseenter', function() {
        const actions = this.querySelector('.message-actions');
        if (actions) actions.style.opacity = '1';
    });
    
    messageWrapper.addEventListener('mouseleave', function() {
        const actions = this.querySelector('.message-actions');
        if (actions) actions.style.opacity = '0';
    });
    
    messagesArea.appendChild(messageWrapper);
    messagesArea.scrollTop = messagesArea.scrollHeight;
}

// Modal pour les images
function openImageModal(imageSrc) {
    const modal = document.createElement('div');
    modal.className = 'image-modal';
    modal.style.cssText = 'display: block; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.9); cursor: pointer;';
    modal.innerHTML = `<img src="${imageSrc}" alt="Image" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); max-width: 90%; max-height: 90%; border-radius: 8px;">`;
    modal.onclick = () => document.body.removeChild(modal);
    document.body.appendChild(modal);
}

