<script>
document.addEventListener('DOMContentLoaded', function() {
    const chatMessages = document.getElementById('chat-messages');
    const messageForm = document.getElementById('message-form');
    const messageInput = document.getElementById('message-input');
    
    if (!chatMessages || !messageForm) return;
    
    // Charger les messages existants
    loadMessages();
    
    // Envoyer un message
    messageForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const content = messageInput.value.trim();
        if (!content) return;
        
        // Ajouter le message Ã  l'interface
        addMessage(content, true);
        messageInput.value = '';
        
        // Envoyer au serveur
        fetch('{% url "send_transaction_message" transaction.id %}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-CSRFToken': '{{ csrf_token }}',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: 'content=' + encodeURIComponent(content)
        })
        .then(response => response.json())
        .then(data => {
            if (data.status !== 'success') {
                console.error('Erreur:', data.message);
            }
        })
        .catch(error => {
            console.error('Erreur:', error);
        });
    });
    
    // Charger les messages
    function loadMessages() {
        fetch('{% url "get_transaction_messages" transaction.id %}', {
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            chatMessages.innerHTML = '';
            
            if (data.messages && data.messages.length > 0) {
                data.messages.forEach(message => {
                    addMessage(message.content, message.is_mine, message.created_at);
                });
            } else {
                chatMessages.innerHTML = '<div class="message other"><p>Aucun message pour le moment. Commencez la conversation!</p></div>';
            }
        })
        .catch(error => {
            console.error('Erreur:', error);
        });
    }
    
    // Ajouter un message Ã  l'interface
    function addMessage(content, isOwn, timestamp = null) {
        const messageDiv = document.createElement('div');
        messageDiv.className = 'message ' + (isOwn ? 'own' : 'other');
        
        messageDiv.innerHTML = `
            <div>${content}</div>
            ${timestamp ? '<div class="message-time">' + formatTime(timestamp) + '</div>' : ''}
        `;
        
        chatMessages.appendChild(messageDiv);
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }
    
    // Formater l'heure
    function formatTime(timestamp) {
        const date = new Date(timestamp);
        return date.toLocaleTimeString('fr-FR', {
            hour: '2-digit',
            minute: '2-digit'
        });
    }
    
    // Recharger les messages toutes les 10 secondes
    setInterval(loadMessages, 10000);
});
</script>

{% endblock %}
